<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.events">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Events"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Events.NoActionBar" />
        <activity
            android:name=".Activities.Fragments.OurMessagesFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.OpenChatFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.HomeFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.EventsFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.AttendEventFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.CreateEventFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.MyEventsFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.Fragments.RateEventFragment"
            android:exported="false" />
        <activity
            android:name=".Activities.AttendEventPopUpActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>