<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="@string/Register_account"
        android:textAppearance="@style/BigText"
        android:gravity="top"
        tools:ignore="MissingConstraints"
        android:fontFamily="@font/outfit_extra_bold"/>
    <EditText
        android:id="@+id/SignUp_First_Name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/input_box"
        android:gravity="top"
        android:hint="@string/First_Name"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <EditText
        android:id="@+id/SignUp_Last_Name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/Last_Name"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <EditText
        android:id="@+id/SignUp_Phone_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/phonenumber"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/SignUp_email_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/email"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <EditText
        android:id="@+id/SignUp_password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_box"
        android:gravity="top"
        android:hint="@string/password"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bigbutton"
        android:text="@string/SignUp"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/already_registered_message_part1"
            android:paddingEnd="5dp"
            android:fontFamily="@font/outfit_semi_bold"
            android:textColor="@color/inputText"
            android:gravity="center"
            tools:ignore="RtlSymmetry" />
        <Button
            android:id="@+id/move_to_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="@string/already_registered_message_part2"
            android:textAppearance="@style/linkText"
            android:fontFamily="@font/outfit_semi_bold"
            android:gravity="left|center_vertical"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</LinearLayout>