<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Activities.MyEventsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_dehaze_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Events"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_bold"
            android:textAppearance="@style/mediumText"
            android:layout_margin="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/ic_baseline_add_24" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_events_rectangle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/image"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-175dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Category_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Start_Date_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Location_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_events_rectangle"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/image"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-175dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Category_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Start_Date_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Location_Event"
        android:textColor="@color/white"
        android:textAppearance="@style/mediumText"
        android:fontFamily="@font/outfit_light"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>