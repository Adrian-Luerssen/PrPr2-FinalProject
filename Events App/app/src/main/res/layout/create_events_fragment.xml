<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".Activities.Fragments.CreateEventFragment">

        <ImageView
            android:id="@+id/EditEvent_imageview"
            android:layout_width="200dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:src="@drawable/image"
            tools:ignore="ContentDescription" />
        <EditText
            android:id="@+id/imageURL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/input_box"
            android:gravity="top"
            android:hint="@string/imageURL"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"/>

        <EditText
            android:id="@+id/EditEvent_title_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:hint="@string/title"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/EditEvent_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="@string/Description"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"
            tools:ignore="Autofill,TextFields" />

        <Spinner
            android:id="@+id/EditEvent_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint = "@string/category"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium">
        </Spinner>
        <EditText
            android:id="@+id/numberofpeople"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/input_box"
            android:gravity="top"
            android:hint="@string/numberofpeople"
            android:inputType="number"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"/>


        <EditText
            android:id="@+id/EditEvent_startDate_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="@string/Start_Date_Event"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"
            android:focusable="false"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/EditEvent_calendar1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="335dp"
            android:src="@drawable/ic_calendar"
            android:backgroundTint="@color/background"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/EditEvent_endDate_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="@string/End_Date_Event"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"
            android:focusable="false"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/EditEvent_calendar2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="335dp"
            android:src="@drawable/ic_calendar"
            android:backgroundTint="@color/background"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/EditEvent_location_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="@string/Location_Event"
            android:textColorHint="@color/inputText"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAppearance="@style/InputFieldText"
            android:fontFamily="@font/outfit_medium"
            tools:ignore="Autofill,TextFields" />

        <Button
            android:id="@+id/EditEvent_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bigbutton"
            android:fontFamily="@font/outfit_bold"
            android:text="@string/createEvents"
            android:textAppearance="@style/mediumText" />

    </LinearLayout>
</ScrollView>