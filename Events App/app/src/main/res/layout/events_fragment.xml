<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments.EventsFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <EditText
                android:id="@+id/event_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:hint="@string/keyword"
                android:background="@drawable/input_box"
                android:textColorHint="@color/inputText"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textAppearance="@style/InputFieldText"
                android:fontFamily="@font/outfit_medium"
                tools:ignore="Autofill,TextFields"/>
            <EditText
                android:id="@+id/event_location"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:hint="@string/location"
                android:background="@drawable/input_box"
                android:textColorHint="@color/inputText"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textAppearance="@style/InputFieldText"
                android:fontFamily="@font/outfit_medium"
                tools:ignore="Autofill,TextFields"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp">
                <EditText
                    android:id="@+id/event_date"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:hint="@string/date"
                    android:background="@drawable/input_box"
                    android:textColorHint="@color/inputText"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textAppearance="@style/InputFieldText"
                    android:fontFamily="@font/outfit_medium"
                    tools:ignore="Autofill,TextFields"
                    android:focusable="false"
                    android:clickable="false"/>
                <ImageButton
                    android:id="@+id/EditEvent_calendar1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_calendar"
                    android:backgroundTint="@color/background"
                    app:layout_constraintBottom_toBottomOf="@+id/event_date"
                    app:layout_constraintTop_toTopOf="@+id/event_date"
                    app:layout_constraintEnd_toEndOf="@+id/event_date"
                    tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText"
                    android:contentDescription="TODO" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout">
            <Button
                android:id="@+id/searchButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="@string/searchInput"
                android:layout_gravity="bottom"/>
            <Button
                android:id="@+id/searchButtonBest"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="@string/GetBest"
                android:layout_gravity="bottom"/>
            <Button
                android:id="@+id/clearButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="@string/clear"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_rec_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>
</LinearLayout>