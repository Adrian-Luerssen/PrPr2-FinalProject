<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/boy1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/message_list_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:textAppearance="@style/mediumText"
                    android:textColor="@color/white"
                    android:text="@string/user1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />
                <TextView
                    android:id="@+id/message_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/outfit_light"
                    android:textAppearance="@style/linkText"
                    android:textColor="@color/white"
                    android:text="@string/our_messages"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/message_user_list_message"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/outfit_light"
                android:textAppearance="@style/linkText"
                android:textColor="@color/white"
                android:text="@string/our_messages"
                android:maxLength="30"
                android:singleLine="true"
                android:layout_gravity="left"
                android:layout_margin="10dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>