<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".SearchUsersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/search_users"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/search_box"
        android:layout_marginTop="100dp"
        android:gravity="top"
        android:hint="@string/search"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        tools:ignore="Autofill,TextFields" />

    <ImageButton
        android:id="@+id/calendar1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_serach_users_white"
        android:backgroundTint="@color/search_icon" />
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:fontFamily="@font/outfit_bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/linkText"
        android:textColor="@color/white"
        android:text="@string/matching"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/boy1"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/outfit_light"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="105dp"
        android:textAppearance="@style/mediumText"
        android:textColor="@color/white"
        android:text="@string/user1"
        tools:ignore="RtlHardcoded" />

    </LinearLayout>
</LinearLayout>

