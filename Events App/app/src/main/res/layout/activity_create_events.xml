<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".CreateEventsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Events"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_bold"
            android:textAppearance="@style/mediumText"
            android:layout_margin="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/ic_baseline_options_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/image"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/title"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        tools:ignore="Autofill,TextFields" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="@string/Description"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        tools:ignore="Autofill,TextFields" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="@string/Category_Event"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <ImageButton
        android:id="@+id/options"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="330dp"
        android:src="@drawable/ic_desplegable"
        android:backgroundTint="@color/background"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="@string/Start_Date_Event"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <ImageButton
        android:id="@+id/calendar1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="335dp"
        android:src="@drawable/ic_calendar"
        android:backgroundTint="@color/background"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText"
        android:contentDescription="TODO" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="@string/End_Date_Event"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"/>

    <ImageButton
        android:id="@+id/calendar2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="335dp"
        android:src="@drawable/ic_calendar"
        android:backgroundTint="@color/background"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_box"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="@string/Location_Event"
        android:textColorHint="@color/inputText"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/InputFieldText"
        android:fontFamily="@font/outfit_medium"
        tools:ignore="Autofill,TextFields" />

    <Button
        android:id="@+id/createEvents"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bigbutton"
        android:fontFamily="@font/outfit_bold"
        android:text="@string/createEvents"
        android:textAppearance="@style/mediumText" />


</LinearLayout>